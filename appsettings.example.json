{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<your-tenant-id>",
    "ClientId": "<your-client-id>",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc",
    "ClientSecret": "<your-client-secret>"
  },
  "AzureAIFoundry": {
    "ProjectEndpoint": "https://<your-foundry-project>.cognitiveservices.azure.com/openai/deployments/<your-deployment>",
    "ModelName": "<your-model-name>",
    "APIKey": "<your-api-key>"
  },
  "Microsoft365": {
    "TenantId": "<your-tenant-id>",
    "ClientId": "<your-client-id>",
    "CopilotRetrievalEndpoint": "https://graph.microsoft.com/beta/copilot/retrieval",
    "FilterExpression": "path:\"https://<your-tenant>.sharepoint.com\"",
    "FileContextQuery": "What are all the relevant policies",
    "RulesContextQuery": "What are all the rules in rulebooks that apply to new policies",
    "Scopes": [
      "https://graph.microsoft.com/Files.Read.All",
      "https://graph.microsoft.com/Sites.Read.All",
      "https://graph.microsoft.com/Mail.Send",
      "https://graph.microsoft.com/User.Read.All"
    ],
    "AuthorizeScopesString": "https://graph.microsoft.com/Files.Read.All https://graph.microsoft.com/Sites.Read.All https://graph.microsoft.com/Mail.Send https://graph.microsoft.com/User.Read.All"
  },
  "ChatSettings": {
    "MaxTokens": 1000,
    "Temperature": 0.7,
    "TopK": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ForceHttps": true,
  "UseHttpsRedirection": true,
  "ForwardedHeadersOptions": {
    "ForwardedHeaders": "XForwardedFor,XForwardedProto,XForwardedHost",
    "RequireHeaderSymmetry": false
  },
  "Authentication": {
    "Schemes": {
      "OpenIdConnect": {
        "RequireHttpsMetadata": true,
        "ResponseType": "code",
        "UsePkce": true,
        "SaveTokens": true
      }
    }
  },
  "CookiePolicy": {
    "SecurePolicy": "Always",
    "SameSite": "Lax",
    "HttpOnly": true
  }
}
